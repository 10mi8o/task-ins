<%= form_with(model: @picture, local: true, url: confirm_pictures_path) do |form| %>

<% if @picture.errors.any? %>
  <div id="error_box">
    <h2><%= @picture.errors.count %>件のエラーを検出しました</h2>
    <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field mb20">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>
<div class="field mb20">
  <%= form.label :content %>
  <%= form.text_field :content %>
</div>
<div class="field mb20">
  <%= form.label :image %>
  <div><%= image_tag(@picture.image.url)if @picture.image.url %></div>
  <div><%= form.file_field :image, id: :picture_image %></div>
</div>
<div class="mb20">
  <%= form.submit %>
</div>
<% end %>

<%= link_to '一覧画面にもどる', pictures_path, class: 'btn btn-default' %>
