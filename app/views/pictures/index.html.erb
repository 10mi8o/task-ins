<h1 class="text-center mb20">投稿一覧</h1>
<!-- <p> -->
  <%#= notice %>
<!-- </p> -->
<div class="container">
  <div class="row">
    <table class="table">
      <tr>
        <th>タイトル</th>
        <th>テキスト</th>
      </tr>
    <% @pictures.each do |picture| %>

      <tr width="100">
          <td><%= picture.title %></td>
          <td><%= picture.content %></td>
          <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
          <% if picture.user_id == current_user.id %>
          <td><%= link_to '編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集しますか？' } %></td>
          <td><%= link_to '削除する', picture_path(picture.id), data: { confirm: '本当に削除しますか？'}, method: :delete %></td>
          <% end %>
      </tr>
    <% end %>
    </table>

  </div>
  <%= link_to '新規投稿画面へ', new_picture_path, class: 'btn btn-default' %>

</div>
