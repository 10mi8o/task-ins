<!DOCTYPE html>
<html>
  <head>
    <title>Ins</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">DIC_TASK</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if logged_in? %>
        <a class="navbar-brand" href="/pictures">DIC_TASK</a>
        <% else %>
        <a class="navbar-brand" href="/">DIC_TASK</a>
        <% end %>
      </div>
      <div id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li><%= link_to "Profile", user_path(current_user.id) %></li>
            <li><%= link_to "View Posts", pictures_path %></li>
            <li><%= link_to "Favorite Posts", favorites_path %></li>
            <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
          <% else %>
            <li><%= link_to "Log in", new_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

    <div class="container">
      <div class="row">
        <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
      </div>
    </div>

    <%= yield %>

    <footer>
      &copy;Test_Company
    </footer>
  </body>
</html>
